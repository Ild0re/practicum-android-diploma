<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/regionName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/region_image_endLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dim16"
        android:layout_marginVertical="@dimen/dim6"
        android:paddingVertical="@dimen/dim14"
        android:fontFamily="@font/ys_display_regular"
        tool:text="Оренбург"
        android:textSize="@dimen/text16"
        />
    <ImageView
        android:id="@+id/region_image_endLine"
        android:layout_width="@dimen/dim48"
        android:layout_height="@dimen/dim48"
        android:layout_marginStart="@dimen/dim4"
        android:layout_marginEnd="@dimen/dim4"
        app:layout_constraintTop_toTopOf="@id/regionName"
        app:layout_constraintBottom_toBottomOf="@id/regionName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/regionName"
        android:src="@drawable/filter_arrow_right_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
