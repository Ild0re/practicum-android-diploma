<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="@dimen/dim48"
        android:layout_height="@dimen/dim48"
        android:layout_marginStart="@dimen/dim16"
        android:scaleType="centerInside"
        android:layout_marginTop="9dp"
        app:layout_constraintEnd_toStartOf="@id/tv_item_vacancy_city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_item_vacancy_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim12"
        android:layout_marginEnd="@dimen/dim16"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/text22"
        app:layout_constraintStart_toEndOf="@id/image_item"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintEnd_toEndOf="parent"
        tool:text="Android-разработчик,\n Москва" />

    <TextView
        android:id="@+id/tv_item_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim12"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/dim16"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/text16"
        app:layout_constraintStart_toEndOf="@id/image_item"
        app:layout_constraintTop_toBottomOf="@id/tv_item_vacancy_city"
        app:layout_constraintEnd_toEndOf="parent"
        tool:text="Еда" />

    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim12"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/dim16"
        android:layout_marginBottom="@dimen/dim9"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/text16"
        app:layout_constraintStart_toEndOf="@id/image_item"
        app:layout_constraintTop_toBottomOf="@id/tv_item_company"
        app:layout_constraintEnd_toEndOf="parent"
        tool:text="от 100 000 р" />


</androidx.constraintlayout.widget.ConstraintLayout>
