<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimary">

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/tv_main"
        android:textSize="@dimen/text22"
        android:textColor="?attr/colorOnPrimary"
        android:paddingStart="@dimen/dim16"
        android:paddingEnd="@dimen/dim16"
        android:paddingTop="@dimen/dim19"
        android:paddingBottom="@dimen/dim19"
        android:layout_marginEnd="@dimen/dim4"
        android:fontFamily="@font/ys_display_medium"/>
    <ImageView
        android:id="@+id/iv_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/filter_icon"
        app:layout_constraintBottom_toTopOf="@id/et_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="@dimen/dim4"
        android:paddingHorizontal="@dimen/dim4"
        android:layout_marginTop="@dimen/dim8"
        android:layout_marginEnd="@dimen/dim8"
        android:layout_marginBottom="@dimen/dim8"
        />
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@color/lightGray"
        app:layout_constraintBottom_toTopOf="@id/iv_main_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main"
        android:layout_marginStart="@dimen/dim16"
        android:layout_marginEnd="@dimen/dim16"
        android:paddingHorizontal="@dimen/dim16"
        android:paddingVertical="@dimen/dim8"
        android:hint="@string/et_search"
        android:textColorHint="?attr/colorOnSecondary"
        android:background="@drawable/et_search_shape"
        android:textColor="?attr/colorOnPrimary"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textCursorDrawable="@drawable/cursor_color_search"
        />
    <ImageView
        android:id="@+id/image_search_or_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_search"
        app:layout_constraintBottom_toBottomOf="@id/et_search"
        android:layout_marginEnd="@dimen/dim20"
        android:src="@drawable/search_icon"
        />
    <ImageView
        android:id="@+id/iv_main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        android:layout_marginTop="@dimen/dim156"
        android:layout_marginHorizontal="@dimen/dim16"
        android:src="@drawable/main_image"
        />
    <TextView
        android:id="@+id/tv_main_empty_or_no_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_image"
        android:text="@string/tv_main_no_connect"
        android:gravity="center"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/text22"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="@dimen/dim16"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/dim48"
        android:layout_height="@dimen/dim48"
        android:layout_gravity="center"
        android:indeterminateTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
       />
    <TextView
        android:id="@+id/tv_count_vacancy_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        android:text="@string/tv_main_vacancy_no_search"
        android:textColor="@color/white"
        android:textSize="@dimen/text16"
        android:fontFamily="@font/ys_display_regular"
        android:background="@drawable/main_tv_shape"
        android:layout_marginTop="@dimen/dim11"
        android:paddingHorizontal="@dimen/dim12"
        android:paddingVertical="@dimen/dim4"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_vacancy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        android:layout_marginEnd="@dimen/dim16"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/vacancy_item"
        android:layout_marginTop="@dimen/dim8"
        android:foreground="?attr/selectableItemBackground"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/progressBarUnderRV"
        android:layout_width="@dimen/dim48"
        android:layout_height="@dimen/dim48"
        android:layout_gravity="center"
        android:indeterminateTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dim16"
        android:layout_marginBottom="@dimen/dim16"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
